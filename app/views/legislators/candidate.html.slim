            .graphic-body
              .gpb-04 style="width: #{get_percentage(@candidate["out"]["out_campaign_office"], @candidate["out_total"])}"
                span = get_percentage(@candidate["out"]["out_campaign_office"], @candidate["out_total"])
          .gp-bar
