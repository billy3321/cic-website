.vote-ly-g0v
  .legislators-group
    = render partial: 'shared/legislator_info', locals: { l: @legislator }
  section.single-page-inner
    #title-contributions.vtitle-set
      header
        h3 政治獻金
        .dropdown
          button#menu1.btn.btn-default.dropdown-toggle type="button" data-toggle="dropdown"
            = @ad.name
            i #{@ad.term_start.strftime('%Y')} ～ #{@ad.term_end.strftime('%Y')}
          ul.dropdown-menu role="menu" aria-labelledby="menu1"
            - @ads.each do |a|
              li role="presentation"
                = link_to url_for(params.merge({ad: a.id})) do
                  = a.name
                  i #{a.term_start.strftime('%Y')} ～ #{a.term_end.strftime('%Y')}
        .data-src
          | 資料來源：
          = link_to "立委投票指南", "http://vote.ly.g0v.tw/", target: "_blank"
    = social_share_button_tag("#{@legislator.name}政治獻金")
    .inner-content-txt
      - if @status
        .graphic-group
          .graphic-start
            h4
              | 收入共
              span 
                = to_ten_thousands(@candidate["in_total"])
              | 元
            .gp-top.gpg-01
              .line-all.linegp
              .line-all.linegp.line-all-2
              .line-0.linegps
              .line-01.linegps
                span 10%
              .line-02.linegps
                span 20%
              .line-03.linegps
                span 30%
              .line-04.linegps
                span 40%
              .line-05.linegps
                span 50%
              .line-06.linegps
                span 60%
              .line-07.linegps
                span 70%
              .line-08.linegps
                span 80%
              .line-09.linegps
                span 90%
              .line-10.linegps
                span 100%
          .gp-bar
            p
              | 營利事業捐贈：
              span 
                = to_ten_thousands(@candidate["in"]["in_profit"])
            .graphic-body
              .gpb-01 style="width: #{get_percentage(@candidate["in"]["in_profit"], @candidate["in_total"])}"
                span = get_percentage(@candidate["in"]["in_profit"], @candidate["in_total"])
          .gp-bar
            p
              | 個人捐贈：
              span 
                = to_ten_thousands(@candidate["in"]["in_individual"])
            .graphic-body
              .gpb-02 style="width: #{get_percentage(@candidate["in"]["in_individual"], @candidate["in_total"])}"
                span = get_percentage(@candidate["in"]["in_individual"], @candidate["in_total"])
          .gp-bar
            p
              | 人民團體捐贈：
              span 
                = to_ten_thousands(@candidate["in"]["in_civil"])
            .graphic-body
              .gpb-03 style="width: #{get_percentage(@candidate["in"]["in_civil"], @candidate["in_total"])}"
                span = get_percentage(@candidate["in"]["in_civil"], @candidate["in_total"])
          .gp-bar
            p
              | 政黨捐贈：
              span 
                = to_ten_thousands(@candidate["in"]["in_party"])
            .graphic-body
              .gpb-04 style="width: #{get_percentage(@candidate["in"]["in_party"], @candidate["in_total"])}"
                span = get_percentage(@candidate["in"]["in_party"], @candidate["in_total"])
          .gp-bar
            p
              | 匿名捐贈：
              span 
                = to_ten_thousands(@candidate["in"]["in_anonymous"])
            .graphic-body
              .gpb-05 style="width: #{get_percentage(@candidate["in"]["in_anonymous"], @candidate["in_total"])}"
                span = get_percentage(@candidate["in"]["in_anonymous"], @candidate["in_total"])
          .gp-bar
            p
              | 其他：
              span 
                = to_ten_thousands(@candidate["in"]["in_others"])
            .graphic-body
              .gpb-06 style="width: #{get_percentage(@candidate["in"]["in_others"], @candidate["in_total"])}"
                span = get_percentage(@candidate["in"]["in_others"], @candidate["in_total"])

        .graphic-group
          .graphic-start
            h4
              | 支出共
              span 
                = to_ten_thousands(@candidate["out_total"])
              | 元
            .gp-top.gpg-02
              .line-all.linegp
              .line-all.linegp.line-all-2
              .line-0.linegps
              .line-01.linegps
                span 10%
              .line-02.linegps
                span 20%
              .line-03.linegps
                span 30%
              .line-04.linegps
                span 40%
              .line-05.linegps
                span 50%
              .line-06.linegps
                span 60%
              .line-07.linegps
                span 70%
              .line-08.linegps
                span 80%
              .line-09.linegps
                span 90%
              .line-10.linegps
                span 100%
          .gp-bar
            p
              | 人事費用：
              span 
                = to_ten_thousands(@candidate["out"]["out_personnel"])
            .graphic-body
              .gpb-01 style="width: #{get_percentage(@candidate["out"]["out_personnel"], @candidate["out_total"])}"
                span = get_percentage(@candidate["out"]["out_personnel"], @candidate["out_total"])
          .gp-bar
